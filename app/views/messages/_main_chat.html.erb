<div class="chat-header">
  <div class="header-title">
    <a href="#">hogefuga</a>
  </div>
  <div class="header-button">
    <a href="#">チャットルームを終了する</a>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper-message">
      <div class="message-user">Tom</div>
      <div class="message-date">2022/4/11(mon) 11:01:14</div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        おはよう
      </div>
    </div>
  </div>
</div>

<%= form_with model:[@room,@message], class:"form", local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, placeholder:"type a message", class:"form-message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class:"hidden" %>
    </label>
  <%= f.submit "送信", class:"form-submit" %>
<% end %>
    



</div>

